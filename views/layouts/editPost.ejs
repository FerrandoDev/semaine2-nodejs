<header>
    <div class="container">
        <h1>Edit Post</h1>
    </div>
</header>

<div class="container">
    <form action="/edit/<%= post.id %>" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="titre">Title:</label>
            <input type="text" id="titre" name="titre" value="<%= post.titre %>" required>
        </div>
        <div class="form-group">
            <label for="content">Content:</label>
            <textarea id="content" name="content" required><%= post.content %></textarea>
        </div>
        <div>
            <label for="categorie">Categorie:</label>

            <select class="form-control" id="categorie" name="categorie" required>
                <option selected value="<%= postCat.id %>"><%= postCat.titre %> </option>
                <% allCat.forEach( categorie => { %>
                    <option value="<%= categorie.id %>"><%= categorie.titre %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <% if (post.picture) { %>
                <label for="picture">Current Picture:</label>
                <img src="<%= post.picture %>" alt="Post Image" style="width: 100px;">
                <input type="text" class="hidden form-control" id="oldPicture" name="oldPicture"
                       value="<%= post.picture %>">
            <% } %>

            <input type="file" id="picture" name="picture">
        </div>
        <div class="form-group">
            <label for="alt">Title:</label>
            <input type="text" id="alt" name="alt" value="<%= post.alt %>" required>
        </div>
        <input type="submit" value="Update">
    </form>
</div>



